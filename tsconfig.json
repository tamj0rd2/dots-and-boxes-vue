{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./out",
    "composite": true,
    "rootDir": "./",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "nuxt.config.ts",
    "src/client/**/*",
    "./nuxt.config.ts",
  ],
  "files": ["vue-shim.d.ts"],
  "exclude": [
    "node_modules",
    ".*/**/*",
    "dist",
    "out"
  ]
}
